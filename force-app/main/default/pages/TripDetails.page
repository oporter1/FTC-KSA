                    <div class="table-section">
                        <h2>Registered</h2>
                        <table class="registration-table">
                            <thead>
                                <tr>
                                    <th>Contact Name</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Type</th>
                                    <th>Stage</th>
                                    <th>Amount</th>
                                    <th>Paid</th>
                                    <th>Due</th>
                                </tr>
                            </thead>
                            <tbody>
                                <apex:repeat value="{!registeredList}" var="reg">
                                    <tr>
                                        <td>{!reg.opportunity.School_Contact__r.FirstName} {!reg.opportunity.School_Contact__r.LastName}</td>
                                        <td>
                                            <apex:outputText value="Not Available" rendered="{!ISBLANK(reg.opportunity.School_Contact__r.Email)}" style="color: #999;"/>
                                            <apex:outputLink value="mailto:{!reg.opportunity.School_Contact__r.Email}" style="color: #007bff; text-decoration: underline;" rendered="{!NOT(ISBLANK(reg.opportunity.School_Contact__r.Email))}">
                                                {!reg.opportunity.School_Contact__r.Email}
                                            </apex:outputLink>
                                        </td>
                                        <td>{!reg.bestPhoneNumber}</td>
                                        <td>{!reg.travelerType}</td>
                                        <td>{!reg.opportunity.StageName}</td>
                                        <td>${!reg.invoice.fw1__Total_Invoice_Amount__c}</td>
                                        <td>${!reg.invoice.fw1__Total_Paid_Amount__c}</td>
                                        <td>${!reg.invoice.fw1__Total_Invoice_Amount__c - reg.invoice.fw1__Total_Paid_Amount__c}</td>
